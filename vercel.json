{
  "version": 2,
  "builds": [
    {
      "src": "src/betterbargains/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "src/build_files.sh",
      "use": "@vercel/static",
      "config": {
        "distDir": "static"
      }
    }
  ],
  "routes": [
    {
      "src": "/staticfiles/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/betterbargains/wsgi.py"
    }
  ]
}
